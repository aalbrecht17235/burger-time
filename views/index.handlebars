<h1>Burgs!</h1>

<h2>Burgers Burgers Burgers</h2>
<p>Available Burgers</p>
<div> 
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burgers devour=true}}
  {{/unless}}
  {{/each}}
  </div>

    <form class="create-form">
          <div>
            <input type="text" id="burger" name="name">
          </div>
          <div>
              <br>
          <button class="btn btn-warning mx-auto" type="submit">Add burger</button>
          </div>
            <div class="form-group mx-auto">
            <label for="burger">Add Burger</label>
          </div>
    </form>

      <p>Eaten Burgers</p>
    <div>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/eaten}}
      {{/if}}
      {{/each}}
    </div>